<h1>Welcome to the longest word-game !</h1>

<form action="/game" method="get">
  <label for="size">How many letters do you want to play with ?</label>
  <input type="text" id="size" name="grid_size">
  <input type="submit" value="let s play">
</form>

<% unless @grid == [] %>
  <h3> Here is your grid ! Good luck ! </h3>
  <h4><%= @grid %></h4>
  <div class="container">
    <form action="/score" method="get">
      <label for="result">What's your best shot ?</label>
      <input type="text" id="result" name="answer">
      <input type="hidden" name="start_time" value="<%= @start_time %>">
      <input type="hidden" name="grid" value="<%= @grid.join %>">
      <input type="submit" value="Submit your answer">
    </form>
  </div>
<% end %>






